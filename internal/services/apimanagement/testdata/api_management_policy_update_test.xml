<policies>
  <inbound>
    <set-variable name="userHeader" value="@(context.Request.Headers.GetValueOrDefault("X-User-Header", "default"))" />
    <find-and-replace from="token" to="userid" />
    <set-header name="X-New-Header" exists-action="override">
      <value>@("new-value")</value>
    </set-header>
  </inbound>
</policies>
