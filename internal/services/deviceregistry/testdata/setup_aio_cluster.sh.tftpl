#!/bin/bash

# Install docker
sudo apt-get update
sudo apt-get -y install ca-certificates curl gnupg lsb-release
sudo mkdir -m 0755 -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo chmod a+r /etc/apt/keyrings/docker.gpg
sudo apt-get update
sudo apt-get -y install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

# Manage Docker as a non-root user
sudo groupadd docker || true
sudo usermod -aG docker $USER
newgrp docker << END

# Install golang and kind
sudo snap install go --classic
go install sigs.k8s.io/kind@latest

# Install az cli and login
curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
az login --username "${client_id}" --password "${client_secret}" --service-principal --tenant "${tenant_id}"
# az login --identity --username "${client_id}"

# Create a new cluster
export PATH="$HOME/go/bin:$PATH"
export KUBECONFIG="${working_dir}/kind-config"
kind create cluster --name adr-terraform-kind --config kind.yaml --kubeconfig kind-config

# Configure cluster and install Azure IoT Operations extension for the tests:
python3 "${working_dir}/setup_aio_cluster.py" \
--subscriptionId "${subscription_id}" \
--resourceGroupName "${resource_group_name}" \
--clusterName "${cluster_name}" \
--location "${location}" \
--customLocation "${custom_location}" \
--storageAccount "${storage_account}" \
--schemaRegistry "${schema_registry}" \
--schemaRegistryNamespace "${schema_registry_namespace}" \
--tenantId "${tenant_id}" \

